\makeindex[name=elements,title=Index of Elements]
\makeindex[name=datatypes,title=Index of Data Types]

\newcommand{\elem}[1]{%
	\lowercase{\def\templabel{#1}}
	\hyperref[elem:\templabel]{\texttt{#1}}
	\index[elements]{#1}
}

\newcommand{\element}[1]{%
	\lowercase{\def\templabel{#1}} \subsection{#1}\label{elem:\templabel} \index[elements]{#1|textbf}
}

\newenvironment{interfaces}
{\subsubsection*{Interfaces}\begin{itemize}}
{\end{itemize}}

\newenvironment{interface}[1]
{\item #1 \begin{itemize}}
{\end{itemize}}

\newenvironment{method}[1]
{\item \texttt{#1} \begin{itemize}}
{\end{itemize}}

\newcommand{\effect}[1]{%
	\item Effect: #1
}

\newenvironment{exceptions}[0]
{\item Exceptions: \begin{itemize}}
{\end{itemize}}

\newcommand{\exception}[2]{%
	\item \texttt{#1}: #2
}
\newcommand{\noexc}{%
	\item  Exceptions: None
}

\newcommand{\data}[1]{%
	\lowercase{\def\templabel{#1}}
	\hyperref[datatype:\templabel]{\texttt{#1}}
	\index[datatypes]{#1}
}

\newcommand{\datatype}[1]{%
	\lowercase{\def\templabel{#1}}%
	\item \texttt{#1}\label{datatype:\templabel}
	\index[datatypes]{#1|textbf}
}

\newcommand{\lskip}{\vspace{\baselineskip}}
